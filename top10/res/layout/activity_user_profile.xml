<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FAFAFA"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/shop_items_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:listSelector="@android:color/transparent" />

    <!--
         <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="2dip"
        android:background="#BEBEBE"
        android:orientation="horizontal" />
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/sound_option"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@drawable/settings_button_selector"
            android:contentDescription="@string/contentDescription"
            android:scaleType="center"
            android:src="@drawable/sound_state_action" />

        <ImageButton
            android:id="@+id/help_option"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@drawable/settings_button_selector"
            android:contentDescription="@string/contentDescription"
            android:scaleType="center"
            android:src="@drawable/help_action" />

        <ImageButton
            android:id="@+id/podium_option"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@drawable/settings_button_selector"
            android:contentDescription="@string/contentDescription"
            android:paddingBottom="0dip"
            android:paddingLeft="13dip"
            android:paddingRight="13dip"
            android:paddingTop="0dip"
            android:scaleType="fitXY"
            android:src="@drawable/podium" />

        <ImageButton
            android:id="@+id/rate_option"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@drawable/settings_button_selector"
            android:contentDescription="@string/contentDescription"
            android:scaleType="center"
            android:src="@drawable/rate_action" />

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@drawable/settings_button_selector"
            android:contentDescription="@string/contentDescription"
            android:paddingBottom="9dip"
            android:paddingLeft="21dip"
            android:paddingRight="21dip"
            android:paddingTop="9dip"
            android:scaleType="fitXY"
            android:src="@drawable/share" />
    </LinearLayout>

</LinearLayout>